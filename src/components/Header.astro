---
import { SITE_TITLE } from "../consts";
---

<header>
  <div class="container">
    <h2>
      {SITE_TITLE}
    </h2>
    <p>Personal website made with the Astro Framework.</p>
  </div>
</header>
<style>
  header {
    color: #fff;
    background: #34495e;
    background: linear-gradient(
      0deg,
      #9b59b6,
      #4aa3df,
      #1abc9c,
      #2ecc71,
      #f1c40f,
      #e67e22,
      #e74c3c
    );
    background-size: 1400% 1400%;
    animation: colorAnimation 30s ease infinite;
  }
  @keyframes colorAnimation {
    0% {
      background-position: 50% 0%;
    }
    50% {
      background-position: 50% 100%;
    }
    100% {
      background-position: 50% 0%;
    }
  }
  .container {
    margin: auto;
    padding: 60px 20px;
    max-width: 65ch;
    animation-name: headerAnimation;
    animation-duration: 0.3s;
  }
  @keyframes headerAnimation {
    0% {
      opacity: 0;
      transform: translate3d(0, -100%, 0);
    }
    100% {
      opacity: 1;
      transform: none;
    }
  }
  h2 {
    color: #fff;
    margin-bottom: 0;
  }
  p {
    margin-top: 0;
  }
</style>
